<h1>Listing challengers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>In</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @challengers.each do |challenger| %>
  <tr>
    <td><%= challenger.name %></td>
    <td><%= challenger.email %></td>
    <td><%= challenger.in %></td>
    <td><%= link_to 'Show', challenger %></td>
    <td><%= link_to 'Edit', edit_challenger_path(challenger) %></td>
    <td><%= link_to 'Destroy', challenger, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

